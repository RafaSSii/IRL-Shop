<% content_for :title, "Ecommerce Rails" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl text-center text-blue-700">Products</h1>
  

  <div id="products" class="min-w-full divide-y divide-gray-200 space-y-5 bg-gray-300 grid grid-cols-4 gap-8 rounded-lg">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render product %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No products found.</p>
    <% end %>
  </div>
</div>
