<%= link_to product do %>
  <div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
    <%= image_tag product.images.first, class: "w-full h-80 object-cover rounded-lg hover:brightness-75 transition-all duration-250" %> 
    <p class="text-lg font-bold"> <%= product.name %> </p>
    <p> <%= number_to_currency product.price %> </p>
  </div>
<% end %>